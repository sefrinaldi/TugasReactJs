<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="User">
    <insert id="insert" parameterType="com.sefrinaldi.backendForJS.model.User">
        INSERT INTO USER ( FULLNAME, USERNAME, PASSWORD, ADDRESS) VALUES
        (#{fullname}, #{username}, #{password}, #{address});
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <resultMap id="result" type="com.sefrinaldi.backendForJS.model.User">
        <result property="id" column="ID"/>
        <result property="fullname" column="FULLNAME"/>
        <result property="username" column="USERNAME"/>
        <result property="password" column="PASSWORD"/>
        <result property="address" column="ADDRESS"/>
    </resultMap>

    <select id="getAll" resultMap="result">
        SELECT * FROM USER;
    </select>

    <select id="getById" parameterType="int" resultMap="result">
        SELECT * FROM USER WHERE ID=#{id};
    </select>

    <select id="getByUsername" parameterType="String" resultMap="result">
        SELECT * FROM USER WHERE username=#{username}
    </select>

    <select id="update" parameterType="com.sefrinaldi.backendForJS.model.User">
        UPDATE USER SET FULLNAME = #{fullname}, USERNAME=#{username},
        PASSWORD=#{password}, ADDRESS = #{address} WHERE ID = #{id}
    </select>

    <select id="deleteById" parameterType="int">
        DELETE FROM USER WHERE ID = #{id};
    </select>
</mapper>